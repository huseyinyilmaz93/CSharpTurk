@model AspNetMVC_CSharpTurk.Models.DatabaseObjectModels.Ipucu

@{
    ViewBag.Title = "IpucuDuzenle";
}
<script src="~/Scripts/ipuclari.js"></script>
<h2>IpucuDuzenle</h2>

<div id="ang_ipucuDuzenle" ng-app="ipucuDuzenle" ng-controller="ipucuDuzenleController">
    <form name="formIpucuDuzenle" ng-submit="submitForm()" ng-init="ipucuId = @ViewBag.id">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Ipucu</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.IpucuId)

            <div class="form-group">
                @Html.LabelFor(model => model.IpucuBaslik, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" class="form-control" name="ipucuBaslik" ng-model="ipucuBaslik">
                    @Html.ValidationMessageFor(model => model.IpucuBaslik)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IpucuGovde, new { @class = "control-label col-md-2" })
                <div>
                    <div class="col-sm-10 col-md-10">
                        <div text-angular ng-model="ipucuGovde" name="demo-editor" ta-text-editor-class="border-around" ta-html-editor-class="border-around"></div>
                    </div>
                    <span ng-show="errorIpucuGovde">{{errorIpucuGovde}}</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Düzenle" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    @Html.ActionLink("Ipucu Listesine Geri Dön", "Ipuclari")
</div>
<br />