@model AspNetMVC_CSharpTurk.Models.DatabaseObjectModels.Ipucu

@{
    ViewBag.Title = "IpucuOlustur";
}
<script src="~/Scripts/ipuclari.js"></script>
<h2>IpucuOlustur</h2>

<div class="col-md-12" id="ipucu" ng-app="ipucuOlustur" ng-controller="ipucuOlusturController">
    <form name="formIpucuOlustur" ng-submit="submitForm()">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Ipucu</h4>
            <hr />
            @Html.ValidationSummary(true)
            <br>
            <div class="form-group">
                @Html.LabelFor(model => model.IpucuBaslik, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" name="ipucuBaslik" class="form-control" ng-model="ipucu.ipucuBaslik">
                    <span ng-show="errorIpucuBaslik">{{errorIpucuBaslik}}</span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IpucuGovde, new { @class = "control-label col-md-2" })
                <div>
                    <div class="col-sm-10 col-md-10">
                        <div text-angular ng-model="ipucu.ipucuGovde" name="demo-editor" ta-text-editor-class="border-around" ta-html-editor-class="border-around"></div>
                    </div>
                    <span ng-show="errorIpucuGovde">{{errorIpucuGovde}}</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Oluştur" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>
<div>
    @Html.ActionLink("Ipucu Listesine Geri Dön", "Ipuclari")
</div>
<br />