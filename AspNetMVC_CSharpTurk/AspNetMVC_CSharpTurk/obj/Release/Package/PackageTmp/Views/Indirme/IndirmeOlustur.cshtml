@model AspNetMVC_CSharpTurk.Models.DatabaseObjectModels.IndirmePostModel

@{
    ViewBag.Title = "İndirme Oluştur | CSharpTürk";
}

<h2>IndirmeOlustur</h2>

<div class="container">
    <div class="row sifirla">
        <div class="col-sm-12 col-lg-12 col-md-12 col-ls-12 col-xs-12">

            @using (Html.BeginForm("IndirmeYukle", "Yazar", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal">
                    <h4>Indirme</h4>
                    <hr />
                    
                    <div class="form-group">
                        <label for="Dosya">Dosya : </label>
                        <div class="col-md-10">
                            <input type="file" name="file" id="file" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IndirmeBaslik, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.IndirmeBaslik)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IndirmeGovde, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.IndirmeGovde)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Kaydet" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
