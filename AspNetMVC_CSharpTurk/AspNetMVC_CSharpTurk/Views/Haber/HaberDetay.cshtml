
@{
    ViewBag.Title = "HaberDetay | CSharpTürk";
}
<script src="~/Scripts/angular_spec/HaberDetay.js"></script>
<br />
<div id="ang_makaleGetir" ng-init="haberId=@ViewBag.haberId" ng-controller="haberGetirController"
     class="table-responsive col-lg-12 col-sm-12 col-md-12 col-ls-12 col-xs-12">
    <div class="row sifirla">
        <div class="visible-xs">
            <div class="col-xs-4">
                <img class="img-bordered wdthgt100" src="~/Content/images/haber_icon.png" />
            </div>
            <div class="col-xs-8">
                <h4 class="colorHaber">{{haber.HaberBaslik}}</h4>
                <small class="color808080"> -- {{haber.HaberTarih | date : 'dd.MM.yyyy HH:mm'}} </small>
            </div>
        </div>
        <div class="visible-lg">
            <div class="col-lg-2">
                <img class="wdthgt100" src="~/Content/images/haber_icon.png" />
            </div>
            <div class="col-lg-10 marginLeft-50">
                <h4 class="visible-xs colorHaber">{{haber.HaberBaslik}}</h4>
                <h2 class="hidden-xs colorHaber">{{haber.HaberBaslik}}</h2>
                <small class="color808080"> -- {{haber.HaberTarih | date : 'dd.MM.yyyy HH:mm'}} </small>
            </div>
        </div>
        <div class="hidden-xs hidden-lg">
            <div class="col-sm-2 col-md-2 col-ls-2">
                <img class="img-bordered wdthgt100" src="~/Content/images/haber_icon.png" />
            </div>
            <div class="col-sm-10 col-md-10 col-ls-10">
                <h4 class="visible-xs colorHaber">{{haber.HaberBaslik}}</h4>
                <h2 class="hidden-xs colorHaber">{{haber.HaberBaslik}}</h2>
                <small class="color808080"> -- {{haber.HaberTarih | date : 'dd.MM.yyyy HH:mm'}} </small>
            </div>
        </div>
    </div>
    <br />
    <blockquote>
        <h4 class="colorHaber"> Haber Özet </h4> <p> {{haber.HaberOzet}} </p>
    </blockquote>
    <hr />

    <div ng-bind-html="rawHtmlGovde()"> </div>
    <hr />
    <br />
    <a class="btn btn-primary" href="@ViewBag.previousUrl">
        <span class="glyphicon glyphicon-chevron-left glyphicon-th-large"></span>
        Geri Dön
    </a>
    <br />
</div>
<br />


